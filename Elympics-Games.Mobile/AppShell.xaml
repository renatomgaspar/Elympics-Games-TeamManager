<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Elympics_Games.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Elympics_Games.Mobile.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="Elympics_Games.Mobile">

    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate local:LoginView}"
    Route="LoginView" />

    <ShellContent
        Title="Signup"
        ContentTemplate="{DataTemplate local:SignupView}"
        Route="SignupView" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:HomeView}"
        Route="HomeView" />

    <ShellContent
        Title="ShowTeams"
        ContentTemplate="{DataTemplate local:ShowTeamsView}"
        Route="ShowTeamsView" />

</Shell>
